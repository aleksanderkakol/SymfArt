{% extends 'base.html.twig' %}
{% block title %}Welcome
{% endblock %}
{% block body %}
	<h1>Articles</h1>
	{% if articles %}
		<table class="table table-striped">
			<thead>
				<tr>Article title</tr>
				<tr>Actions</tr>
			</thead>
			<tbody>
				{% for article in articles %}
					<tr>
						<td>{{ article. title }}</td>
						<td>
							<a href="/article/{{ article.id }}" class="btn btn-dark">Show</a>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	{% else %}
		<h2>No articles to display</h2>
	{% endif %}
{% endblock %}
