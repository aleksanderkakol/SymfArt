{% extends 'base.html.twig' %}
{% block title %}Welcome
{% endblock %}
{% block body %}
	<h1>Articles</h1>
	{% if articles %}
		<table id="articles" class="table table-striped">
			<thead>
				<tr>Article title</tr>
				<tr>Actions</tr>
			</thead>
			<tbody>
				{% for article in articles %}
					<tr>
						<td>{{ article. title }}</td>
						<td>
							<a href="/article/{{ article.id }}" class="btn btn-dark">Show</a>
							<a href="/article/edit/{{ article.id }}" class="btn btn-light">Edit</a>
							<a href="#" class="btn btn-danger delete-article" data-id="{{article.id}}">Delete</a>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	{% else %}
		<h2>No articles to display</h2>
	{% endif %}
{% endblock %}
{% block javascripts %}
	<script src="/js/main.js" type="text/javascript"></script>
{% endblock %}
